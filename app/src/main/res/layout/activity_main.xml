<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >


    <ImageView
        android:id="@+id/firehome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/firehome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        ></ImageView>


    <ImageView
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_circle_24"
        android:layout_below="@+id/firehome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        ></ImageView>

        <TextView
            android:id="@+id/shortcut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle"
            android:fontFamily="@font/interbold"
            android:text="Shorcut in your Important App"
            android:textAlignment="center"
            android:textColor="#595A66"
            android:layout_marginHorizontal="20dp"
            android:textSize="25dp"></TextView>



    <TextView
        android:id="@+id/firetera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FireApp"
        android:layout_below="@id/shortcut"
        android:fontFamily="@font/interregular"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#595A66"
        android:textAlignment="center"
        ></TextView>


    </RelativeLayout>

</RelativeLayout>